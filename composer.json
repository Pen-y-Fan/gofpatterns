{
  "name": "pen-y-fan/gofpatterns",
  "description": "project is based on the The GoF patterns course website.",
  "type": "project",
  "keywords": [
    "GoFpatterns",
    "phppatterns",
    "patterns"
  ],
  "license": "MIT",
  "require-dev": {
    "phpunit/phpunit": "^8.4",
    "theseer/phpdox": "^0.12.0",
    "phpstan/phpstan": "^0.11.17"
  },
  "autoload": {
    "psr-4": {
      "App\\": "App/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "test/"
    }
  },
  "scripts": {
    "phpdox": "vendor/bin/phpdox",
    "phpstan": "vendor/bin/phpstan analyse app test -l 7",
    "test": "vendor/bin/phpunit",
    "wphpdox": "vendor\\bin\\phpdox.bat",
    "wphpstan": "vendor\\bin\\phpstan.bat analyse app test --level 7",
    "wtest": "vendor\\bin\\phpunit.bat"
  }
}
